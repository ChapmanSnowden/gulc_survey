<div class="container">
  <div class="survey_show">
    <h2><%= @survey.name %></h2>

    <form action="/answers" method="post">
      <!-- When submitted, form should post '/answers' and save answers to Answers table in the DB -->
      <%@survey.questions.each do |question| %>
        <div class="prompt"><%=question.prompt  %></div>
        <br>
         <% question.choices.each do |choice| %>
            <input type="radio" name="<%=question.id %>" value="<%=choice.id%>"> <%= choice.content %>
            <br>
         <% end %> 
         <br>
       <%end %> 
     
       <button type="submit" class="btn btn-info">Submit Answers</button>
    </form>
  </div>
</div>
