<div class="container">

  <h1>Dashboard</h1>

  
  <div>
    <h3>?uests for the Crowd</h3>
      <% if @user.surveys %>
        <% @user.surveys.each do |survey| %>
          <a href="/surveys/<%=survey.id%>"><%= survey.name %></a><br>
        <% end %>
      <% end %>
      <a href="/surveys/new">Create New Survey</a>
  </div>

  <div>
  <h3>?uests You've Answered</h3>
    <% if @user.completed_surveys %>
      <% @user.completed_surveys.each do |survey| %>
         <a href="/surveys/<%=survey.id%>"><%= survey.name %></a><br>
      <% end %>
    <% end %>
  </div>


  <div>
  <h3>?uests You Can Answer</h3>
  
    <% @all_surveys.each do |survey| %>
      <% unless survey.user_id == @user.id %>
        <a href="/surveys/<%=survey.id%>"><%= survey.name %></a><br>
      <% end %>
    <% end %>
  </div>

</div>


